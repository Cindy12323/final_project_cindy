<%= search_form_for @q, :class => collapse_search_form, :id => "jobs_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :company_cont, "Company contains" %>
    <%= f.text_field :company_cont, :class => "form-control", :placeholder => "Company contains" %>
  </div>

  <div class="form-group">
    <%= f.label :current_eq, "Current" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :current_eq, "1", checked: ((params[:q] && params[:q][:current_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :current_eq, "0", checked: ((params[:q] && params[:q][:current_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :current_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_date_cont, "End date contains" %>
    <%= f.text_field :end_date_cont, :class => "form-control", :placeholder => "End date contains" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date_cont, "Start date contains" %>
    <%= f.text_field :start_date_cont, :class => "form-control", :placeholder => "Start date contains" %>
  </div>

  <div class="form-group">
    <%= f.label :location_cont, "Location contains" %>
    <%= f.text_field :location_cont, :class => "form-control", :placeholder => "Location contains" %>
  </div>

  <div class="form-group">
    <%= f.label :position_cont, "Position contains" %>
    <%= f.text_field :position_cont, :class => "form-control", :placeholder => "Position contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :contact_first_name_cont, "Contact first_name contains" %>
    <%= f.text_field :contact_first_name_cont, :class => "form-control", :placeholder => "Contact first_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/jobs" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#jobs_filters">
  Show filters
</a>
