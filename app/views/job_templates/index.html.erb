<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All jobs
    </h1>

    <a href="/jobs/new" class="btn btn-block btn-outline-secondary">
      Add a new job
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "job_templates/jobs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Contact
        </th>

        <th>
          Company
        </th>

        <th>
          Position
        </th>

        <th>
          Location
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Current
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= job.id %>
        </td>

        <td>
          <% if job.contact.present? %>
            <a href="/contacts/<%= job.contact.id %>">
              <%= job.contact.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= job.company %>
        </td>

        <td>
          <%= job.position %>
        </td>

        <td>
          <%= job.location %>
        </td>

        <td>
          <%= job.start_date %>
        </td>

        <td>
          <%= job.end_date %>
        </td>

        <td>
          <%= job.current %>
        </td>

        <td>
          <%= time_ago_in_words(job.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(job.updated_at) %> ago
        </td>

        <td>
          <a href="/jobs/<%= job.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @jobs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
