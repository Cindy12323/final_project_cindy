<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activities

    <a data-toggle="collapse" href="#contact_activities_new_form">
      Add activity
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @contact.activities.each do |activity| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/activities/<%= activity.id %>">
          <%= activity.title %>
        </a>

        <a href="/delete_activity_from_contact/<%= activity.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="contact_activities_new_form">
        <%= render partial: "contact_templates/contact_activities_new_form" %>
      </div>
    </div>

  </ul>
</div>
