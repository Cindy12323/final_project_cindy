<h1>
  Edit contact #<%= @contact.id %>
</h1>

<hr>

<!-- Form contact start -->
<form action="/update_contact/<%= @contact.id %>" method="post">
<!-- Form contact end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @contact.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for email start -->
  <div class="form-group">
    <label for="email">
      Email
    </label>

    <!-- Input for email start -->
    <input type="text" id="email" name="email" class="form-control" value="<%= @contact.email %>">
    <!-- Input for email end -->
  </div>
  <!-- Label and input for email end -->

  <!-- Label and input for phone_number start -->
  <div class="form-group">
    <label for="phone_number">
      Phone number
    </label>

    <!-- Input for phone_number start -->
    <input type="text" id="phone_number" name="phone_number" class="form-control" value="<%= @contact.phone_number %>">
    <!-- Input for phone_number end -->
  </div>
  <!-- Label and input for phone_number end -->

  <!-- Label and input for network start -->
  <div class="form-group">
    <label for="network">
      Network
    </label>

    <!-- Input for network start -->
    <input type="text" id="network" name="network" class="form-control" value="<%= @contact.network %>">
    <!-- Input for network end -->
  </div>
  <!-- Label and input for network end -->

  <!-- Label and input for company start -->
  <div class="form-group">
    <label for="company">
      Company
    </label>

    <!-- Input for company start -->
    <input type="text" id="company" name="company" class="form-control" value="<%= @contact.company %>">
    <!-- Input for company end -->
  </div>
  <!-- Label and input for company end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @contact.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for work_location start -->
