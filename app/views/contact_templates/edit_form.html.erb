    <label for="remarks">
      Remarks
    </label>

    <!-- Input for remarks start -->
    <input type="text" id="remarks" name="remarks" class="form-control" value="<%= @contact.remarks %>">
    <!-- Input for remarks end -->
  </div>
  <!-- Label and input for remarks end -->

  <button class="btn btn-block btn-outline-secondary">
    Update contact
  </button>
</form>

<hr>

<a href="/contacts">
  Go back
</a>
