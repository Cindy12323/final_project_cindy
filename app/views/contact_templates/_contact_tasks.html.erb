<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tasks

    <a data-toggle="collapse" href="#contact_tasks_new_form">
      Add task
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @contact.tasks.each do |task| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/tasks/<%= task.id %>">
          <%= task.title %>
        </a>

        <a href="/delete_task_from_contact/<%= task.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="contact_tasks_new_form">
        <%= render partial: "contact_templates/contact_tasks_new_form" %>
      </div>
    </div>

  </ul>
</div>
