<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All contacts
    </h1>

    <a href="/contacts/new" class="btn btn-block btn-outline-secondary">
      Add a new contact
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Email
        </th>

        <th>
          Phone number
        </th>

        <th>
          Network
        </th>

        <th>
          Company
        </th>

        <th>
          Title
        </th>

        <th>
          Work location
        </th>

        <th>
          School program
        </th>

        <th>
          School section
        </th>

        <th>
          School kwest
        </th>

        <th>
          First met
        </th>

        <th>
          Remarks
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <!-- Display contact.id start -->
        <td>
          <%= contact.id %>
        </td>
        <!-- Display contact.id end -->

        <!-- Display contact.name start -->
        <td>
          <%= contact.name %>
        </td>
        <!-- Display contact.name end -->

        <!-- Display contact.email start -->
        <td>
          <%= contact.email %>
        </td>
        <!-- Display contact.email end -->

        <!-- Display contact.phone_number start -->
        <td>
          <%= contact.phone_number %>
        </td>
        <!-- Display contact.phone_number end -->

        <!-- Display contact.network start -->
        <td>
          <%= contact.network %>
        </td>
        <!-- Display contact.network end -->

        <!-- Display contact.company start -->
        <td>
          <%= contact.company %>
        </td>
        <!-- Display contact.company end -->

        <!-- Display contact.title start -->
        <td>
          <%= contact.title %>
        </td>
        <!-- Display contact.title end -->

        <!-- Display contact.work_location start -->
        <td>
          <%= contact.work_location %>
        </td>
        <!-- Display contact.work_location end -->

        <!-- Display contact.school_program start -->
        <td>
          <%= contact.school_program %>
        </td>
        <!-- Display contact.school_program end -->

        <!-- Display contact.school_section start -->
        <td>
          <%= contact.school_section %>
        </td>
        <!-- Display contact.school_section end -->

        <!-- Display contact.school_kwest start -->
        <td>
          <%= contact.school_kwest %>
        </td>
        <!-- Display contact.school_kwest end -->

        <!-- Display contact.first_met start -->
        <td>
          <%= contact.first_met %>
        </td>
        <!-- Display contact.first_met end -->

        <!-- Display contact.remarks start -->
        <td>
          <%= contact.remarks %>
        </td>
        <!-- Display contact.remarks end -->

        <!-- Display contact.created_at start -->
        <td>
          <%= time_ago_in_words(contact.created_at) %> ago
        </td>
        <!-- Display contact.created_at end -->

        <!-- Display contact.updated_at start -->
        <td>
          <%= time_ago_in_words(contact.updated_at) %> ago
        </td>
        <!-- Display contact.updated_at end -->

        <td>
          <a href="/contacts/<%= contact.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
