<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All contacts
    </h1>

    <a href="/contacts/new" class="btn btn-block btn-outline-secondary">
      Add a new contact
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "contact_templates/contacts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Email
        </th>

        <th>
          Phone number
        </th>

        <th>
          Network
        </th>

        <th>
          Company
        </th>

        <th>
          Title
        </th>

        <th>
          Work location
        </th>

        <th>
          School program
        </th>

        <th>
          School section
        </th>

        <th>
          School kwest
        </th>

        <th>
          First met
        </th>

        <th>
          Remarks
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <td>
          <%= contact.id %>
        </td>

        <td>
          <%= contact.name %>
        </td>

        <td>
          <%= contact.email %>
        </td>

        <td>
          <%= contact.phone_number %>
        </td>

        <td>
          <%= contact.network %>
        </td>

        <td>
          <%= contact.company %>
        </td>

        <td>
          <%= contact.title %>
        </td>

        <td>
          <%= contact.work_location %>
        </td>

        <td>
          <%= contact.school_program %>
        </td>

        <td>
          <%= contact.school_section %>
        </td>

        <td>
          <%= contact.school_kwest %>
        </td>

        <td>
          <%= contact.first_met %>
        </td>

        <td>
          <%= contact.remarks %>
        </td>

        <td>
          <%= time_ago_in_words(contact.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(contact.updated_at) %> ago
        </td>

        <td>
          <a href="/contacts/<%= contact.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @contacts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
