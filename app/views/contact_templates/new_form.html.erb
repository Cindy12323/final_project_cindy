<h1>
  Add a new contact
</h1>


<hr>

<form action="/create_contact" method="post">

  <div class="form-group">
    <label for="first_name">
      First name
    </label>

    <input type="text" id="first_name" name="first_name" class="form-control">
  </div>

  <div class="form-group">
    <label for="email">
      Email
    </label>

    <input type="text" id="email" name="email" class="form-control">
  </div>

  <div class="form-group">
    <label for="phone_number">
      Phone number
    </label>

    <input type="text" id="phone_number" name="phone_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="school_program">
      School program
    </label>

    <input type="text" id="school_program" name="school_program" class="form-control">
  </div>

  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <input type="text" id="notes" name="notes" class="form-control">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="hometown">
      Hometown
    </label>

    <input type="text" id="hometown" name="hometown" class="form-control">
  </div>

  <div class="form-group">
    <label for="interests">
      Interests
    </label>

    <input type="text" id="interests" name="interests" class="form-control">
  </div>

  <div class="form-group">
    <label for="last_name">
      Last name
    </label>

    <input type="text" id="last_name" name="last_name" class="form-control">
  </div>

  <div class="form-group">
    <label for="network">
      Network
    </label>

    <input type="text" id="network" name="network" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create contact
  </button>
</form>

<hr>

<a href="/contacts">
  Go back
</a>
